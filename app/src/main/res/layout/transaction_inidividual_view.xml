<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <TextView
                android:id="@+id/tvTransactionResult"
                style="@style/CardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="SENT"/>

        <TextView
                android:id="@+id/tvDate"
                style="@style/CardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="date"/>

        <TextView
                android:id="@+id/tvHash"
                style="@style/CardHashStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTransactionResult"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="hashcaluekskskskskksk382992"/>

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tvHash"
                android:background="@color/colorAccent"
                android:layout_margin="5dp"
                android:layout_height="1dp"/>

        <TextView
                android:id="@+id/tvResultLabel"
                style="@style/CardSubTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/result_label"/>
        <TextView
                android:id="@+id/tvResult"
                style="@style/CardSubTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="0.00000001BT"/>
        <TextView
                android:id="@+id/tvAddressLabel"
                style="@style/CardSubTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvResult"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/address_label"/>

        <TextView
                android:id="@+id/tvAddress"
                style="@style/CardSubTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvResult"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="sohusdohuxsoiudsohxsioxhoxoid"/>

        <TextView
                android:id="@+id/tvFeeLabel"
                style="@style/CardSubTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/fee_label"/>

        <TextView
                android:id="@+id/tvFee"
                style="@style/CardSubTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvAddress"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="0.00000001BT"/>

    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>